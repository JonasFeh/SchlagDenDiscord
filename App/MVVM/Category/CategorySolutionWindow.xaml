<Window x:Class="App.MVVM.Category.CategorySolutionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:category="clr-namespace:App.MVVM.Category"
        mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel>
        <ItemsControl ItemsSource="{Binding CategoryElements}">
            <ItemsControl.DataContext>
                <category:CategoryElementViewModel />
            </ItemsControl.DataContext>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Solution}" Command="{Binding ToggleVisibilityCommand}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </WrapPanel>
</Window>
